{
    "info": {
        "name": "Shopping Cart API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Create User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/users",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "users"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"1234\"\n}"
                }
            }
        },
        {
            "name": "Login User",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/users/login",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "users",
                        "login"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"1234\"\n}"
                }
            }
        },
        {
            "name": "Create Item",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/items",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "items"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Laptop\",\n  \"price\": 50000\n}"
                }
            }
        },
        {
            "name": "Add To Cart",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "token",
                        "value": "<PASTE_TOKEN_HERE>"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/carts",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "carts"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"item_id\": 1\n}"
                }
            }
        },
        {
            "name": "Create Order",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "http://localhost:8080/orders",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "orders"
                    ]
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"user_id\": 1,\n  \"cart_id\": 1\n}"
                }
            }
        }
    ]
}